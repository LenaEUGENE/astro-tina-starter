---
import { Icon } from "astro-icon";

interface Props { 
  text: string;
  href: string;
  icon?: {
    name: string;
    side: "left" | "right";
  };
  classes?: string;

}
const { text, href, icon, classes, ...rest } = Astro.props as Props;
---
<button
  name="appelez-moi"
  type="button"
>
  <a
    href={href}
    class:list={[
      "link",
      classes,
    ]}
    { ...rest}
  >
    {icon && icon.side === "left" && (

      <Icon name={icon.name} class="icon" />

      )
    } 

    {text}

    {icon && icon.side === "right" && (

      <Icon aria-hidden="true" name={icon.name} class="icon ml-2 w-6 group-hover:text-white text-xs md:text-sm uppercase" />

      )
    } 
</a>

</button>

  <style>

  .primary {
    @apply inline-flex border-orange-400 hover:border-2 items-center px-4 py-2 md:px-6 md:py-3 rounded-lg shadow-md border-2 transition-all duration-300 uppercase font-medium text-sm tracking-wide focus:ring focus:ring-offset-2 focus:outline-none bg-orange-500 hover:bg-orange-600 text-white focus:ring-orange-600;
  
  }
  .primary-md {
    @apply inline-flex border-orange-400 hover:border-2 items-center px-3 py-2 rounded-lg shadow-md border-2 transition-all duration-300 uppercase font-medium text-xs tracking-wide focus:ring focus:ring-offset-2 focus:outline-none bg-orange-500 hover:bg-orange-600 text-white focus:ring-orange-600;
  
  }
  </style>